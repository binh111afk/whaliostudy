                </div>
                
                <!-- Mobile: Fallback -->
                <div class="mobile-fallback fallback-view">
                    <div class="fallback-icon-wrapper">
                        <i class="<%= fileIcon %> <%= iconClass %>"></i>
                    </div>
                    <h2 class="fallback-title"><%= docName %></h2>
                    <p class="fallback-subtitle">Tài liệu <%= fileTypeName %></p>
                    <p class="fallback-meta">
                        <% if (docSize) { %><%= docSize %> • <% } %>
