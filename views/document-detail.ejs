        <div class="kbd-hint">
            <kbd>D</kbd>
            <span>Tải xuống</span>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Go back function - improved reliability
        function goBack() {
            // Try to go back in history first
            if (window.history.length > 1) {
                window.history.back();
                // Fallback after a short delay if history.back() doesn't work
                setTimeout(() => {
                    // If we're still on the same page, redirect to library
                    window.location.href = '/#library';
                }, 100);
            } else {
                // No history, go directly to library
                window.location.href = '/#library';
            }
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            // Ignore if typing in input
            if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
            
            // ESC to go back
            if (e.key === 'Escape') {
                goBack();
            }
            // D to download
            if ((e.key === 'd' || e.key === 'D') && !e.ctrlKey && !e.metaKey) {
                const downloadBtn = document.querySelector('.btn-primary[download]');
                if (downloadBtn) downloadBtn.click();
            }
        });
        
        // Hide keyboard hints after 5 seconds
        setTimeout(() => {
            const hints = document.querySelector('.keyboard-hints');
            if (hints) {
                hints.style.transition = 'opacity 0.5s ease';
                hints.style.opacity = '0';
                setTimeout(() => hints.remove(), 500);
            }
        }, 5000);
    </script>
